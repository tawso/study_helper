<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText android:id="@+id/etTitle" android:hint="Заголовок" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etContent" android:hint="Текст заметки" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textMultiLine" android:minLines="4"/>
</LinearLayout>
